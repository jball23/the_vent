<h2>Need to get something off your chest?<br>Vent it!</h2>

<div class="vent-index">
  <%= render partial: 'form' %>
</div>

<div class="now-venting">
  <h2> NOW VENTING </h2>

  <% @vents.each do |vent| %>
  <p><%= vent.name %></p>
  <p><%= vent.body %></p>
  <p><%= vent.mood %></p>
  <%= link_to "Add / View Responses", vent_path(vent) %>
  <% end %>
</div>
