<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<div class="vent-name">
  <h1><%= @vent.name %> said...</h1>
</div>

<div class="vent-show-wrapper">
  <div class="vent-body">
    <p>"<%= @vent.body %>"</p>
  </div>

  <div class="edit-vent"><%= link_to "Edit Vent", edit_vent_path(@vent) %></div>
  <div class="delete-vent"><%= link_to "Delete Vent", vent_path(@vent), method: :delete %></div>
</div>

<div class="read-responses">
  <h2>Read Responses</h2>

  <% @vent.responses.each do |response| %>
    <p><%= response.name %> responded with...</p>
    <div class="response-body">"<%= response.body %>"</div>
    <%= link_to "Edit / Delete Response", edit_vent_response_path(@vent, response) %>
  <% end %>
</div>

<div class="response-form">
  <h2>Add Your Response</h2>
  <%= render '/responses/form' %>
</div>
